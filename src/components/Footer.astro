<style>
  .social-link {
    @apply p-2 bg-slate-800 text-slate-300 rounded-full hover:bg-ocean-600 hover:text-white transition-colors duration-200;
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    // Handle category filter links from footer
    const categoryLinks = document.querySelectorAll('.category-link');
    
    categoryLinks.forEach(link => {
      link.addEventListener('click', function(e) {
        const category = this.getAttribute('data-category');
        
        // If we're already on the homepage, prevent navigation and trigger filter
        if (window.location.pathname === '/') {
          e.preventDefault();
          
          // Scroll to blog section
          const blogSection = document.getElementById('blog');
          if (blogSection) {
            blogSection.scrollIntoView({ behavior: 'smooth', block: 'start' });
          }
          
          // Trigger the category filter after a short delay to allow scrolling
          setTimeout(() => {
            const filterButton = document.querySelector(`[data-category="${category}"]`);
            if (filterButton) {
              filterButton.click();
            }
          }, 500);
        } else {
          // If we're on a different page, store the category in sessionStorage
          sessionStorage.setItem('selectedCategory', category);
        }
      });
    });
    
    // Check if we need to apply a stored category filter (when coming from another page)
    const storedCategory = sessionStorage.getItem('selectedCategory');
    if (storedCategory && window.location.pathname === '/') {
      sessionStorage.removeItem('selectedCategory');
      
      // Scroll to blog section first
      const blogSection = document.getElementById('blog');
      if (blogSection) {
        blogSection.scrollIntoView({ behavior: 'smooth', block: 'start' });
      }
      
      // Apply the filter after scrolling
      setTimeout(() => {
        const filterButton = document.querySelector(`[data-category="${storedCategory}"]`);
        if (filterButton) {
          filterButton.click();
        }
      }, 1000);
    }
  });
</script>