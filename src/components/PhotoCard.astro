---
export interface Props {
  src: string;
  alt: string;
  title: string;
  category: 'diving' | 'scouting' | 'nature';
  metadata?: {
    location?: string;
    date?: string;
    depth?: string;
  };
  className?: string;
}

const { src, alt, title, category, metadata, className = '' } = Astro.props;

const categoryColors = {
  diving: 'bg-ocean-100 text-ocean-800',
  scouting: 'bg-emerald-100 text-emerald-800',
  nature: 'bg-sand-100 text-sand-800'
};
---

<div class={`card overflow-hidden group ${className}`}>
  <div class="relative overflow-hidden">
    <img 
      data-src={src}
      alt={alt}
      class="w-full h-48 sm:h-56 object-cover loading-skeleton group-hover:scale-105 transition-transform duration-300 ease-out"
      loading="lazy"
      width="400"
      height="224"
    />
    
    <!-- Category Badge -->
    <div class="absolute top-3 left-3">
      <span class={`px-2 py-1 rounded-full text-xs font-medium ${categoryColors[category]}`}>
        {category.charAt(0).toUpperCase() + category.slice(1)}
      </span>
    </div>
    
    <!-- Overlay on hover -->
    <div class="absolute inset-0 bg-black/20 opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
  </div>
  
  <div class="p-4">
    <h3 class="font-semibold text-lg text-slate-800 mb-2 line-clamp-2">{title}</h3>
    
    {metadata && (
      <div class="space-y-1 text-sm text-slate-600">
        {metadata.location && (
          <div class="flex items-center">
            <svg class="w-4 h-4 mr-2 text-slate-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
            </svg>
            <span>{metadata.location}</span>
          </div>
        )}
        {metadata.date && (
          <div class="flex items-center">
            <svg class="w-4 h-4 mr-2 text-slate-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
            </svg>
            <span>{metadata.date}</span>
          </div>
        )}
        {metadata.depth && (
          <div class="flex items-center">
            <svg class="w-4 h-4 mr-2 text-slate-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 17h8m0 0V9m0 8l-8-8-4 4-6-6"></path>
            </svg>
            <span>{metadata.depth}</span>
          </div>
        )}
      </div>
    )}
  </div>
</div>

<style>
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>